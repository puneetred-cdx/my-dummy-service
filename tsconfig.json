{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"lib": ["es2020", "dom"],
		"sourceMap": true,
		"outDir": "./build",
		"rootDir": "./src",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	}
}
